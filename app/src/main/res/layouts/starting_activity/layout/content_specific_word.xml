<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SpecificWordActivity"
    tools:showIn="@layout/activity_specific_word">

    <TextView
        android:id="@+id/spesificWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:text="TextView"
        android:textSize="38sp"
        app:layout_constraintEnd_toStartOf="@+id/spesificWordAudioBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spesificWordAudioBtn" />

    <TextView
        android:id="@+id/spesificWordDefinition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spesificWord" />

    <Button
        android:id="@+id/spesificWordAudioBtn"
        android:layout_width="92dp"
        android:layout_height="57dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="playWord"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spesificWord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spesificWordExamples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exampleTitle" />

    <TextView
        android:id="@+id/exampleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:text="examples"
        app:layout_constraintStart_toStartOf="@+id/spesificWordDefinition"
        app:layout_constraintTop_toBottomOf="@+id/spesificWordDefinition" />
</android.support.constraint.ConstraintLayout>