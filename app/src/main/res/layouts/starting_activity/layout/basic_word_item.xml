<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="31dp"

        android:layout_alignTop="@+id/wordInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:text="Word"
        android:textColor="@color/toolBarTitle"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/word"
        android:layout_alignLeft="@+id/word"
        android:layout_alignTop="@+id/word"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="37dp"
        android:text="definition"
        android:textColor="@color/toolBarTitle"
        app:layout_constraintStart_toStartOf="@+id/word"
        app:layout_constraintTop_toTopOf="@+id/word" />

    <Button
        android:id="@+id/wordInfo"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Button" />

</android.support.constraint.ConstraintLayout>